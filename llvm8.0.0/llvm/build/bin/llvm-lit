#!/usr/bin/env python
# -*- coding: utf-8 -*-

import os
import sys

config_map = {}

def map_config(source_dir, site_config):
    global config_map
    source_dir = os.path.realpath(source_dir)
    source_dir = os.path.normcase(source_dir)
    site_config = os.path.normpath(site_config)
    config_map[source_dir] = site_config

# Variables configured at build time.
llvm_source_root = "/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm"
llvm_obj_root = "/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/build"

# Make sure we can find the lit package.
sys.path.insert(0, os.path.join(llvm_source_root, 'utils', 'lit'))

# Set up some builtin parameters, so that by default the LLVM test suite
# configuration file knows how to find the object tree.
builtin_parameters = { 'build_mode' : "." }


map_config('/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/clang-tools-extra/test/lit.cfg', '/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/build/tools/clang/tools/extra/test/lit.site.cfg')
map_config('/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/clang-tools-extra/test/Unit/lit.cfg', '/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/build/tools/clang/tools/extra/test/Unit/lit.site.cfg')
map_config('/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/clang/test/lit.cfg.py', '/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/build/tools/clang/test/lit.site.cfg.py')
map_config('/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/clang/test/Unit/lit.cfg.py', '/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/build/tools/clang/test/Unit/lit.site.cfg.py')
map_config('/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/lld/test/lit.cfg.py', '/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/build/tools/lld/test/lit.site.cfg.py')
map_config('/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/lld/test/Unit/lit.cfg.py', '/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/build/tools/lld/test/Unit/lit.site.cfg.py')
map_config('/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/utils/lit/tests/lit.cfg', '/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/build/utils/lit/lit.site.cfg')
map_config('/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/test/lit.cfg.py', '/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/build/test/lit.site.cfg.py')
map_config('/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/test/Unit/lit.cfg.py', '/mnt/work/my_github/LLVM-VideoCORE4/llvm8.0.0/llvm/build/test/Unit/lit.site.cfg.py')

builtin_parameters['config_map'] = config_map

if __name__=='__main__':
    from lit.main import main
    main(builtin_parameters)
